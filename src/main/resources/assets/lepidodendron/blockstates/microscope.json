{
  "multipart": [
    {   "when": { "facing": "north" },
      "apply": [
        {"model": "lepidodendron:microscope" }
      ]
    },
    {   "when": { "facing": "south" },
      "apply": [
        {"model": "lepidodendron:microscope", "y": 180  }
      ]
    },
    {   "when": { "facing": "east" },
      "apply": [
        {"model": "lepidodendron:microscope", "y": 90 }
      ]
    },
    {   "when": { "facing": "west" },
      "apply": [
        {"model": "lepidodendron:microscope", "y": 270}
      ]
    },

    {   "when": { "facing": "north", "rf": "true" },
      "apply": [
        {"model": "lepidodendron:microscope_rf" }
      ]
    },
    {   "when": { "facing": "south", "rf": "true" },
      "apply": [
        {"model": "lepidodendron:microscope_rf", "y": 180  }
      ]
    },
    {   "when": { "facing": "east", "rf": "true" },
      "apply": [
        {"model": "lepidodendron:microscope_rf", "y": 90 }
      ]
    },
    {   "when": { "facing": "west", "rf": "true" },
      "apply": [
        {"model": "lepidodendron:microscope_rf", "y": 270}
      ]
    }
  ]
}